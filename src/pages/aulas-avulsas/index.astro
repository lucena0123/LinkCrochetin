---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import productsData from '../../data/products.json';
import { getProductImage } from '../../utils/productImages';
import type { Product } from '../../types/product';

type LessonItem = {
  title: string;
  description: string;
  url: string;
  isExternal: boolean;
  image?: ImageMetadata | string;
  imageAlt: string;
};

const { products } = productsData as { products: Product[] };
const lessonProductSlugs = ['bag-mari', 'bag-ariel', 'bag-atena'];
const lessonProductItems = lessonProductSlugs
  .map((slug) => products.find((product) => product.slug === slug))
  .filter((product): product is Product => Boolean(product))
  .map((product) => {
    const linkUrl = product.lessonUrl ?? `/catalogo/${product.slug}`;
    return {
      title: product.name,
      description: product.lessonUrl ? 'Comprar aula avulsa' : 'Ver detalhes da bolsa',
      url: linkUrl,
      isExternal: linkUrl.startsWith('http'),
      image: getProductImage(product.images[0]),
      imageAlt: product.name
    };
  });

const lessonItems: LessonItem[] = [
  ...lessonProductItems,
  {
    title: 'Bag Tati',
    description: 'Comprar aula avulsa',
    url: 'https://pay.hotmart.com/M103664998T?bid=1767571051716',
    isExternal: true,
    image: getProductImage('bag-tati.png'),
    imageAlt: 'Bag Tati'
  },
  {
    title: 'Bag Emy',
    description: 'Comprar aula avulsa',
    url: 'https://pay.hotmart.com/N103794966L?bid=1768094794890',
    isExternal: true,
    image: getProductImage('bag-emy.png'),
    imageAlt: 'Bag Emy'
  }
];
---

<BaseLayout
  title="Aulas Avulsas - Crochetin"
  description="Escolha uma bolsa para a aula avulsa"
>
  <div class="page-header">
    <a href="/" class="back-button" aria-label="Voltar ao inicio">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
    </a>
    <div class="header-text">
      <h1 class="page-title">Aulas Avulsas</h1>
      <p class="page-subtitle">Escolha uma bolsa para a aula individual</p>
    </div>
    <div class="header-spacer" aria-hidden="true"></div>
  </div>

  <div class="links-section lessons-links">
    {lessonItems.map((item, index) => (
      <a
        href={item.url}
        class="link-card"
        target={item.isExternal ? '_blank' : '_self'}
        rel={item.isExternal ? 'noopener noreferrer' : ''}
        style={`animation-delay: ${0.1 + index * 0.05}s;`}
      >
        <div class="link-icon">
          {typeof item.image === 'string' ? (
            <img
              src={item.image}
              alt={item.imageAlt}
              loading="lazy"
              width="96"
              height="96"
              style="width: 100%; height: 100%; object-fit: cover;"
            />
          ) : item.image ? (
            <Image
              src={item.image}
              alt={item.imageAlt}
              loading="lazy"
              decoding="async"
              sizes="96px"
              widths={[96, 144, 192, 240]}
              quality={95}
              style="width: 100%; height: 100%; object-fit: cover;"
            />
          ) : (
            <span>{item.title.slice(0, 1)}</span>
          )}
        </div>

        <div class="link-content">
          <div class="link-title">{item.title}</div>
          <div class="link-description">{item.description}</div>
        </div>

        <svg class="link-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    ))}
  </div>
</BaseLayout>

<style>
  .page-header {
    display: grid;
    grid-template-columns: 48px 1fr 48px;
    align-items: center;
    gap: 1rem;
    margin-bottom: var(--spacing-xl);
  }

  .back-button {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-beige), var(--color-taupe));
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
    border: none;
  }

  .back-button:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
    color: white;
    opacity: 0.95;
  }

  .header-text {
    text-align: center;
  }

  .page-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-black);
    margin: 0 0 0.25rem;
    line-height: 1.2;
  }

  .page-subtitle {
    color: var(--text-secondary);
    font-size: 1.05rem;
    margin: 0;
  }

  .lessons-links .link-icon {
    width: 96px;
    height: 96px;
  }

  @media (max-width: 640px) {
    .page-header {
      grid-template-columns: 40px 1fr 40px;
    }

    .page-title {
      font-size: 1.5rem;
    }

    .page-subtitle {
      font-size: 0.95rem;
    }

    .lessons-links .link-icon {
      width: 72px;
      height: 72px;
    }
  }
</style>
