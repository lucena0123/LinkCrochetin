  }

  .spec-label {
    font-family: var(--font-sans);
    color: #786552;
    font-size: 0.85rem;
  }

  .spec-value {
    font-family: var(--font-sans);
    color: #3E2F25;
    font-weight: 600;
    font-size: 0.85rem;
  }

  .capitalize {
    text-transform: capitalize;
  }

  /* Actions */
  .actions-container {
    position: sticky;
    bottom: 1rem;
    z-index: 100;
