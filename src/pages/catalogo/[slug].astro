---
import BaseLayout from '../../layouts/BaseLayout.astro';
import WhatsAppButton from '../../components/social/WhatsAppButton.astro';
import productsData from '../../data/products.json';
import type { Product } from '../../types/product';

export async function getStaticPaths() {
  const { products } = productsData as { products: Product[] };
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

interface Props {
  product: Product;
}

const { product } = Astro.props;

const metaDescription = product.description.replace(/\s+/g, ' ').trim();
const priceBRL = product.price.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
const installmentBRL = (product.price / 3).toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });

const defaultBenefits = [
  "Feita 100% √† m√£o",
  "Fio N√°utico Premium",
  "Al√ßa em metal dourado ou prata",
  "Tamanho ideal do dia a dia",
  "Design exclusivo e moderno"
];

const benefits = product.benefits ?? defaultBenefits;
---

<BaseLayout title={product.name} description={metaDescription} image={product.images[0]}>
  <div class="product-detail-wrapper">
    <div class="product-detail-container">
      <!-- Header & Back Button Row -->
      <div class="header-row">
        <a href="/catalogo" class="back-button" aria-label="Voltar ao cat√°logo">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
        </a>
        <h1 class="product-title">{product.name}</h1>
      </div>

      <div class="product-content">
        <!-- Image Section -->
        <div class="image-card">
          <div class="badge-limitada">‚ú® Edi√ß√£o Limitada</div>
          <img src={product.images[0]} alt={product.name} class="main-image" transition:name={`image-${product.slug}`} />
        </div>

        <!-- Price & Trust Compact Section -->
        <div class="price-trust-section">
          <div class="price-container">
            <div class="price-value">
              {priceBRL}
            </div>
            <div class="price-installments">
              3x de {installmentBRL} sem juros
            </div>
          </div>
          
          <!-- Compact Trust Badges -->
          <div class="trust-badges-compact">
            <div class="trust-item">
              <span class="trust-icon">‚≠ê</span> 5.0
            </div>
            <div class="trust-item">
              <span class="trust-icon">üõ°Ô∏è</span> 30 dias
            </div>
            <div class="trust-item">
              <span class="trust-icon">üöö</span> R√°pida
            </div>
          </div>
        </div>

        <!-- Accordions for Details -->
        <div class="accordions-container">
          <!-- Benefits Accordion -->
          <details class="accordion-item" open>
            <summary class="accordion-header">
              <h3>Por que escolher?</h3>
              <svg class="accordion-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
            </summary>
            <div class="accordion-content">
              <ul class="benefits-list">
                {benefits.map(benefit => (
                  <li>
                    <span class="check-icon">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                    </span>
                    {benefit}
                  </li>
                ))}
              </ul>
            </div>
          </details>

          <!-- Specs Accordion -->
          <details class="accordion-item">
            <summary class="accordion-header">
              <h3>‚ú® Especifica√ß√µes</h3>
              <svg class="accordion-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 9l6 6 6-6"/></svg>
            </summary>
            <div class="accordion-content">
              <div class="specs-list">
                <div class="spec-row">
                  <span class="spec-label">Dimens√µes</span>
                  <span class="spec-value">{product.dimensions.width}x{product.dimensions.height}x{product.dimensions.depth}cm</span>
                </div>
                <div class="spec-row">
                  <span class="spec-label">Material</span>
                  <span class="spec-value">{product.material ?? 'Fio N√°utico Premium'}</span>
                </div>
                <div class="spec-row">
                  <span class="spec-label">Cor</span>
                  <span class="spec-value">{product.colors.join(', ')}</span>
                </div>
                <div class="spec-row">
                  <span class="spec-label">Categoria</span>
                  <span class="spec-value capitalize">{product.category.replace('-', ' ')}</span>
                </div>
              </div>
            </div>
          </details>
        </div>

        <!-- WhatsApp Button -->
        <div class="actions-container">
          <WhatsAppButton product={product} />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .product-detail-wrapper {
    min-height: 100vh;
    padding: 1rem 0;
    background: transparent;
  }

  .product-detail-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    position: relative;
  }

  /* Header Row */
  .header-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0 0.5rem;
  }

  .back-button {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-taupe);
    box-shadow: var(--shadow-sm);
    transition: all var(--transition-normal);
    border: none;
    flex-shrink: 0;
  }

  .back-button:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
  }

  .product-title {
    font-family: var(--font-sans);
    font-size: 2rem;
    font-weight: 700;
    color: #3E2F25;
    margin: 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .product-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Image Card */
  .image-card {
    background: white;
    border-radius: 1.5rem;
    padding: 0.5rem;
    position: relative;
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .main-image {
    width: 100%;
    border-radius: 1rem;
    display: block;
    aspect-ratio: 4/3; /* More compact than square */
    object-fit: cover;
  }

  .badge-limitada {
    position: absolute;
    top: 1rem;
    right: 0;
    background: #2EB897;
    color: white;
    padding: 0.25rem 1rem 0.25rem 0.75rem;
    border-radius: 100px 0 0 100px;
    font-family: var(--font-sans);
    font-weight: 600;
    font-size: 0.75rem;
    box-shadow: 0 4px 12px rgba(46, 184, 151, 0.3);
    z-index: 10;
  }

  /* Price & Trust Section */
  .price-trust-section {
    background: #3E2F25;
    border-radius: 1.5rem;
    padding: 1.25rem;
    color: white;
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .price-container {
    text-align: center;
  }

  .price-value {
    font-family: var(--font-sans);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.25rem;
    letter-spacing: -0.02em;
  }

  .currency {
    font-size: 1.25rem;
    vertical-align: super;
    margin-right: 0.25rem;
  }

  .price-installments {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    opacity: 0.9;
  }

  .trust-badges-compact {
    display: flex;
    justify-content: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255,255,255,0.1);
  }

  .trust-item {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.8rem;
    font-weight: 500;
    font-family: var(--font-sans);
  }

  .trust-icon {
    font-size: 1rem;
  }

  /* Accordions */
  .accordions-container {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .accordion-item {
    background: white;
    border-radius: 1rem;
    box-shadow: var(--shadow-sm);
    overflow: hidden;
  }

  .accordion-header {
    padding: 1rem 1.25rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    list-style: none;
    transition: background 0.2s;
  }

  .accordion-header:hover {
    background: #f9f9f9;
  }

  .accordion-header::-webkit-details-marker {
    display: none;
  }

  .accordion-header h3 {
    margin: 0;
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 600;
    color: #3E2F25;
  }

  .accordion-icon {
    color: var(--color-taupe);
    transition: transform 0.3s ease;
  }

  details[open] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    padding: 0 1.25rem 1.25rem 1.25rem;
    border-top: 1px solid #f0f0f0;
    animation: slideDown 0.3s ease-out;
  }

  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Benefits List */
  .benefits-list {
    list-style: none;
    padding: 1rem 0 0 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .benefits-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-sans);
    color: #3E2F25;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .check-icon {
    background: #2EB897;
    color: white;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .check-icon svg {
    width: 12px;
    height: 12px;
  }

  /* Specs List */
  .specs-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-top: 1rem;
  }

  .spec-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .spec-row:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .spec-label {
    font-family: var(--font-sans);
    color: #786552;
    font-size: 0.85rem;
  }

  .spec-value {
    font-family: var(--font-sans);
    color: #3E2F25;
    font-weight: 600;
    font-size: 0.85rem;
  }

  .capitalize {
    text-transform: capitalize;
  }

  /* Actions */
  .actions-container {
    position: sticky;
    bottom: 1rem;
    z-index: 100;
    margin-top: 0.5rem;
  }
</style>
